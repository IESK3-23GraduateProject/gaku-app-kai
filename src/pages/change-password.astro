---
import Layout from "../layouts/Layout.astro";
---

<Layout title="パスワード変更">
  <main
    class="mt-12 md:container mx-auto lg:mt-8 px-6 sm:px-16 xl:px-20 min-h-screen"
  >
    <div class="container mx-auto mt-6">
      <!-- Header Section -->
      <div class="bg-blue-500 text-white text-center py-4 rounded-md shadow-md">
        <h1 class="text-2xl font-bold">パスワード変更</h1>
        <p class="text-sm">新しいパスワードを設定してください</p>
      </div>

      <!-- Change Password Form -->
      <div class="bg-white shadow-md rounded-lg p-6 mt-6 max-w-md mx-auto">
        <form action="/submit-change-password" method="POST" class="space-y-6">
          <!-- Current Password -->
          <div>
            <label
              for="currentPassword"
              class="block text-gray-700 font-bold mb-2"
            >
              現在のパスワード
            </label>
            <input
              type="password"
              id="currentPassword"
              name="currentPassword"
              placeholder="現在のパスワードを入力"
              required
              class="w-full px-4 py-2 border rounded-md bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500"
            />
          </div>

          <!-- New Password -->
          <div>
            <label for="newPassword" class="block text-gray-700 font-bold mb-2">
              新しいパスワード
            </label>
            <input
              type="password"
              id="newPassword"
              name="newPassword"
              placeholder="新しいパスワードを入力"
              required
              class="w-full px-4 py-2 border rounded-md bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500"
            />
          </div>

          <!-- Confirm Password -->
          <div>
            <label
              for="confirmPassword"
              class="block text-gray-700 font-bold mb-2"
            >
              新しいパスワード (確認)
            </label>
            <input
              type="password"
              id="confirmPassword"
              name="confirmPassword"
              placeholder="新しいパスワードを再入力"
              required
              class="w-full px-4 py-2 border rounded-md bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500"
            />
          </div>

          <!-- Submit Button -->
          <div class="text-center">
            <button
              type="submit"
              class="px-6 py-2 bg-gradient-to-r from-blue-400 to-blue-500 text-white font-bold rounded-full hover:from-blue-500 hover:to-blue-600 transition duration-200"
            >
              変更を保存する
            </button>
          </div>
        </form>
      </div>
    </div>
  </main>
</Layout>
