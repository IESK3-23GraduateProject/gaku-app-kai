---
import DesktopSearchBar from '@/components/info-search/desktop';
import Layout from '../layouts/Layout.astro';
import MobileSearchBar from '@/components/info-search/mobile'
---

<Layout title="ホーム">
	<main class="mt-12 md:container mx-auto lg:mt-8 px-6 sm:px-16 xl:px-20">
		<DesktopSearchBar client:load></DesktopSearchBar>
		<MobileSearchBar client:load></MobileSearchBar>
		<ol class="grid -mx-2 sm:-mx-4 py-4 lg:py-6 lg:pb-20 grid-cols-1 max-w-screen-lg">
			<div class="col-span-12 px-2 sm:px-4 [&_a]:last:border-none">
				<a href="#" class="group flex flex-col lg:grid lg:grid-cols-12 w-full py-2 sm:py-4 h-full border-b">
					<div class="flex flex-col w-full lg:col-span-10 align-bottom">
						<h3 class="text-foreground text-lg group-hover:underline">MongoDB Realm &amp; Device Sync Alternatives - Supabase</h3>
						<p class="hidden lg:block text-sm text-foreground-lighter mt-2 max-w-xl">
							Explore alternatives to MongoDB Realm and learn how Supabase provides powerful solutions for device synchronization and real-time database capabilities.
						</p>
					</div>
					<div class="lg:col-span-2 flex justify-start items-start lg:flex lg:justify-end gap-4 text-sm mt-2">
						<div class="text-foreground-lighter group-hover:text-foreground-light min-w-fit">
							<div class="inline-flex items-center whitespace-nowrap rounded-full bg-opacity-10 bg-surface-200 text-foreground-light border border-strong px-2.5 py-0.5 text-xs group-hover:border-foreground-muted capitalize">
								図書館からの連絡
							</div>
						</div>
						<p class="text-foreground-lighter group-hover:text-foreground-light whitespace-nowrap">9 Oct 2024</p>
					</div>
				</a>
			</div>

			<div class="col-span-12 px-2 sm:px-4 [&_a]:last:border-none">
				<a href="#" class="group flex flex-col lg:grid lg:grid-cols-12 w-full py-2 sm:py-4 h-full border-b">
					<div class="flex flex-col w-full lg:col-span-10 align-bottom">
						<h3 class="text-foreground text-lg group-hover:underline">MongoDB Realm &amp; Device Sync Alternatives - Supabase</h3>
						<p class="hidden lg:block text-sm text-foreground-lighter mt-2 max-w-xl">
							Explore alternatives to MongoDB Realm and learn how Supabase provides powerful solutions for device synchronization and real-time database capabilities.
						</p>
					</div>
					<div class="lg:col-span-2 flex justify-start items-start lg:flex lg:justify-end gap-4 text-sm mt-2">
						<div class="text-foreground-lighter group-hover:text-foreground-light min-w-fit">
							<div class="inline-flex items-center whitespace-nowrap rounded-full bg-opacity-10 bg-surface-200 text-foreground-light border border-strong px-2.5 py-0.5 text-xs group-hover:border-foreground-muted capitalize">
								図書館からの連絡
							</div>
						</div>
						<p class="text-foreground-lighter group-hover:text-foreground-light whitespace-nowrap">9 Oct 2024</p>
					</div>
				</a>
			</div>

		</ol>
	</main>
</Layout>
