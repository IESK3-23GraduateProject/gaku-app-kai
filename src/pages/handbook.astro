<style>
  main {
    margin-top: 60px;
    margin-left: 5%;
    margin-right: 5%;
  }
  hr {
    border-width: 1.5px 0 0 0;
    border-style: dashed;
    border-color: rgb(200, 200, 200);
    margin-top: 15px;
    margin-bottom: 15px;
  }
  .br {
    display: none;
  }
  p {
    text-align: left;
  }
  a:hover {
    color: rgb(159, 239, 239);
  }

  @media screen and (max-width: 636px) {
    .br {
      display: block;
    }
  }
</style>
