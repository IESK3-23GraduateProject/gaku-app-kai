---

<header class="min-h-full hidden lg:block">
  <nav class="bg-primary-foreground shadow">
    <div class="mx-auto max-w-7xl px-4">
      <div class="flex h-16 items-center justify-between">
        <!-- Left Section (Logo and Menu) -->
        <div class="flex items-center gap-6">
          <div class="flex-shrink-0">
            <img
              class="h-12 w-12"
              src="/src/components/img/ECClogo.png"
              alt="ECC-GakuApp改"
            />
          </div>
          <div class="hidden md:block">
            <div class="ml-10 flex items-baseline space-x-4">
              {
                menuItems.map((item) => (
                  <a
                    href={item.url}
                    class={`flex items-center gap-2 rounded-md px-2 py-1 text-sm font-small cursor-pointer ${
                      item.title === "ログアウト"
                        ? "bg-blue-500 text-white hover:bg-blue-600 font-bold w-fit"
                        : "text-primary hover:bg-gray-700 hover:text-white"
                    }`}
                    innerHTML={item.icon}
                  >
                    <span>{item.title}</span>
                  </a>
                ))
              }
            </div>
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>
